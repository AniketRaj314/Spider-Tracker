# API Configuration - PVR Cinemas Now Showing
API_URL=https://api3.pvrcinemas.com/api/v1/booking/content/nowshowing
API_METHOD=POST
API_HEADERS={"accept":"application/json, text/plain, */*","accept-language":"en-US,en;q=0.9","appversion":"1.0","chain":"PVR","city":"Bengaluru","content-type":"application/json","country":"INDIA","platform":"WEBSITE","priority":"u=1, i","sec-ch-ua":"\"Not_A Brand\";v=\"99\", \"Chromium\";v=\"142\"","sec-ch-ua-mobile":"?0","sec-ch-ua-platform":"\"macOS\"","sec-fetch-dest":"empty","sec-fetch-mode":"cors","sec-fetch-site":"same-site"}
API_BODY={"city":"Bengaluru"}

# Polling Configuration (in milliseconds)
POLL_INTERVAL=180000

# Server Configuration
SERVER=

# Telegram Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Movie to Track (optional)
# If set, the app will notify you when this movie is found
# Leave empty to use CHECK_CONDITION instead
MOVIE_NAME=Spider-Man

# Condition to check (JavaScript expression) - Optional
# If MOVIE_NAME is set and CHECK_CONDITION is empty, it will automatically check for the movie
# Available variables: data, response, status, output, movies, filmNames, targetMovie
# Available helpers: includes(), equals(), greaterThan(), lessThan(), hasFilm(search)
# 
# Examples:
# - Check for target movie: hasFilm(targetMovie) (automatic if MOVIE_NAME is set)
# - Check if any movies: movies.length > 0
# - Check if specific movie: hasFilm('Spider-Man')
# - Check if multiple movies: movies.length > 5
# - Custom condition: filmNames.some(name => includes(name, 'Spider'))
CHECK_CONDITION=

# Twilio Configuration (Optional - for phone call alerts)
# Get your credentials from https://console.twilio.com/
# Enable phone calls by setting ENABLE_PHONE_CALL=true
ENABLE_PHONE_CALL=false
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
PHONE_NUMBER_TO_CALL=+1234567890
