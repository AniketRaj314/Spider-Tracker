# API Configuration - PVR Cinemas Now Showing
API_URL=https://api3.pvrcinemas.com/api/v1/booking/content/nowshowing
API_METHOD=POST
API_HEADERS={"accept":"application/json, text/plain, */*","accept-language":"en-US,en;q=0.9","appversion":"1.0","chain":"PVR","city":"Bengaluru","content-type":"application/json","country":"INDIA","platform":"WEBSITE","priority":"u=1, i","sec-ch-ua":"\"Not_A Brand\";v=\"99\", \"Chromium\";v=\"142\"","sec-ch-ua-mobile":"?0","sec-ch-ua-platform":"\"macOS\"","sec-fetch-dest":"empty","sec-fetch-mode":"cors","sec-fetch-site":"same-site"}
API_BODY={"city":"Bengaluru"}

# Polling Configuration (in milliseconds)
POLL_INTERVAL=180000

# Server Configuration
SERVER=

# Telegram Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Movie Tracking Configuration
# Option 1: Use keyword sets (recommended) - Array of arrays where each inner array is AND, outer arrays are OR
# Example: [["Spider", "Man"], ["Amazing", "Spider"], ["Predator"]]
# This means: (Spider AND Man) OR (Amazing AND Spider) OR (Predator)
MOVIE_KEYWORDS=[["Spider", "Man"], ["Amazing", "Spider"], ["Predator"]]

# Option 2: Legacy single movie name (for backward compatibility)
MOVIE_NAME=

# Cinema/Theater Tracking Configuration (Optional)
# Similar structure to MOVIE_KEYWORDS - Array of arrays where each inner array is AND, outer arrays are OR
# Example: [["Mall", "Asia"], ["PVR", "Forum"], ["INOX"]]
# This means: (Mall AND Asia) OR (PVR AND Forum) OR (INOX)
# If not set, notifications will be sent for all theaters where the movie is listed
CINEMA_KEYWORDS=[["Mall", "Asia"], ["PVR", "Forum"]]

# Theater Listings API Configuration (Optional - uses defaults if not set)
# Default URL: https://api3.pvrcinemas.com/api/v1/booking/content/msessions
THEATER_LISTINGS_API_URL=https://api3.pvrcinemas.com/api/v1/booking/content/msessions
THEATER_LISTINGS_API_HEADERS={"accept":"application/json, text/plain, */*","accept-language":"en-US,en;q=0.8","appversion":"1.0","authorization":"Bearer","chain":"PVR","city":"Bengaluru","content-type":"application/json","country":"INDIA","platform":"WEBSITE","priority":"u=1, i","sec-ch-ua":"\"Chromium\";v=\"142\", \"Brave\";v=\"142\", \"Not_A Brand\";v=\"99\"","sec-ch-ua-mobile":"?0","sec-ch-ua-platform":"\"Windows\"","sec-fetch-dest":"empty","sec-fetch-mode":"cors","sec-fetch-site":"same-site","sec-gpc":"1"}
# Default body will be auto-generated with mid, but you can override
THEATER_LISTINGS_API_BODY={"city":"Bengaluru","experience":"ALL","specialTag":"ALL","lat":"12.915336","lng":"77.373046","lang":"ALL","format":"ALL","dated":"2025-11-22","time":"08:00-24:00","cinetype":"ALL","hc":"ALL","adFree":false}

# Condition to check (JavaScript expression) - Optional
# If MOVIE_NAME is set and CHECK_CONDITION is empty, it will automatically check for the movie
# Available variables: data, response, status, output, movies, filmNames, targetMovie
# Available helpers: includes(), equals(), greaterThan(), lessThan(), hasFilm(search)
# 
# Examples:
# - Check for target movie: hasFilm(targetMovie) (automatic if MOVIE_NAME is set)
# - Check if any movies: movies.length > 0
# - Check if specific movie: hasFilm('Spider-Man')
# - Check if multiple movies: movies.length > 5
# - Custom condition: filmNames.some(name => includes(name, 'Spider'))
CHECK_CONDITION=

# Twilio Configuration (Optional - for phone call alerts)
# Get your credentials from https://console.twilio.com/
# Enable phone calls by setting ENABLE_PHONE_CALL=true
ENABLE_PHONE_CALL=false
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
PHONE_NUMBER_TO_CALL=+1234567890
# Theater Listings Date Override (Optional)
# If set, this date will be used for all theater listings API calls instead of releaseDate or today's date
# Format: YYYY-MM-DD (e.g., "2025-11-22")
# Leave empty to use automatic date calculation (releaseDate if future, today if past)
THEATER_LISTINGS_DATE_OVERRIDE=
